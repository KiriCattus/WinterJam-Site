/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
	@apply md:text-4xl text-2xl text-center mb-3 font-bold font-blocky;
}

h2 {
	@apply md:text-3xl text-2xl text-center mb-3 font-bold;
}

h3 {
	@apply md:text-2xl text-xl text-center mb-3 font-bold;
}

ol {
	@apply pl-5;
}

li {
	@apply mb-4 text-justify leading-6;
}

section {
	@apply m-auto w-full text-xl mb-12;
}

p {
	@apply mb-4 text-xl text-justify md:text-2xl;
}